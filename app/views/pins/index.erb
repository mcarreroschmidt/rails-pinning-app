<div class="header">
	<h1>Learning to Code</h1>
	<h3>A Collection of Ruby on Rails Resources for Beginners</h3>
</div>
<hr/>
<div class="pins">
<% if @pins %>
    <p><strong>PINS FOUND! YAY! (Of course we can't actually display them.)</strong> (<%= current_user.id %>)</p>
	<% @pins.each_slice(3) do |row| %>
		<div class="row">
			<% row.each do |pin| %>			
<%
pinheader_style = (pin.image.url.blank? ? "" : "background-image:url(#{pin.image.url});background-size:45px;")
%>
				<div class="pin-container col-md-4">
					<div class="pin">
						<div class="pin-header <%="#{pin.category.name}"%>" style="<%="#{pinheader_style}"%>">
							<h4><%=link_to "#{pin.title}", pin_by_name_path(slug: pin.slug) %></h4>
							<%=link_to "#{pin.url}", "#{pin.url}", html_options = {target: "_blank", class: "url"} %>
						</div>
						<hr/>
                        <p class="text"><%= "#{pin.text}" %> (<%="#{pin.user_id}"%>)</p>
					</div>
				</div>
			<% end %>
		</div>
	<% end %>
<% else %>
    <p><strong>Sorry, you currently have no pins! <a href="/pins/new">Creat one!</a></strong> (<%= current_user.id %>)</p>
<% end %>
</div>

<hr/>